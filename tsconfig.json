{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es6"],
    "module": "node16",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules", "commitlint.config.js"]
}
