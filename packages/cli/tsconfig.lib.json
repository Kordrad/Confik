{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "nodenext"
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__mocks__/*.ts"
  ],
  "include": ["src/**/*.ts"]
}
