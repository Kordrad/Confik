{
  "name": "confiks",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/confiks/bin",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/confiks",
        "main": "packages/confiks/bin/index.ts",
        "tsConfig": "packages/confiks/tsconfig.lib.json",
        "assets": ["packages/confiks/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/confiks/jest.config.ts"
      }
    }
  },
  "implicitDependencies": ["confiks-workspace"]
}
