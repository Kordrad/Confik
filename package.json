    "@nx/eslint-plugin": "17.1.3",
    "@nx/jest": "17.1.3",
    "@nx/js": "17.1.3",
    "@nx/node": "17.1.3",
    "@swc-node/register": "~1.6.7",
    "@swc/core": "~1.3.85",
    "@types/chalk-animation": "^1.6.1",
    "@types/figlet": "^1.5.6",
    "@types/gradient-string": "^1.1.3",
